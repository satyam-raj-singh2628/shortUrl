<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Short URL Page</title>
  </head>
  <body>
    <p style="color:red;">Welcome to ShortURL Page</p>
    <div>
      <%if(locals.id) { %>
        <p style="color:green;">Your Short URL is : <a href="/url/<%= id %>">http://localhost:8000/url/<%= id %></a></p>
      <% } %>


      <form method="post" action="/url">
        <label style="color: rgb(60, 0, 255);">Put your URL here..</label>
        <input type="text" name="url" placeholder="http://www.google.com" />
        <button type="submit">Generate</button>
      </form>
       
       
        <% if (locals.urls && urls.length>0) { %>
           <table border="1" style="margin-top: 15px;">
            <thead>
                <th colspan="1">Ser No.</th>
                <th colspan="1">ShortID</th>
                <th colspan="1">Redirect URL</th>
                <th colspan="1">clicks</th>
                <th colspan="1">Action</th>
            </thead>
            <tbody>
                <% urls.map((url,idx) => { %>
               <tr>
                <td><%=idx+1%></td>
                 <td><a href="/url/<%= url.shortId %>"><%= url.shortId %></a></td>
                 <td><%= url.redirectUrl %></td>
                 <td><%= url.visitHistory.length %></td>
                 <td>
           <form method="post" action="/<%= url._id %>/delete">
    <button type="submit">Delete</button>
</form>
        </td>
               </tr>
             <% }) %>
            </tbody>
             <table/>
        
      <%   }%>

    </div>
  </body>
</html>
